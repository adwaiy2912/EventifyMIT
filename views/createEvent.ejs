<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <title>EventifyMIT</title>
      <link rel="icon" href="../img/Logo.png" type="image/x-icon" />
      <link rel="stylesheet" href="../css/reset.css" />
      <link rel="stylesheet" href="../css/headerFooter.css" />
      <link rel="stylesheet" href="../css/create.css" />
      <link rel="stylesheet" href="../bootstrap-5.3.3/css/bootstrap.css" />
      <script defer src="../js/formSubmit.js"></script>
      <script defer src="../bootstrap-5.3.3/js/bootstrap.js"></script>
   </head>
   <body>
      <%- include("layout/header")%>

      <main>
         <div class="event-container d-flex justify-content-center">
            <form
               class="eventForm"
               id="eventForm"
               onsubmit="event.preventDefault(); formSubmit('eventForm', '/user/create');"
            >
               <label for="name">Event Name</label>
               <input type="text" id="name" name="name" />

               <label for="description">Description</label>
               <textarea
                  type="text"
                  id="description"
                  name="description"
               ></textarea>

               <label for="date">Date</label>
               <input type="date" id="date" name="date" />

               <label for="time">Time</label>
               <input type="time" id="time" name="time" />

               <label for="venue">Venue</label>
               <input
                  type="text"
                  id="venue"
                  name="venue"
                  placeholder="ACADEMIC BLOCK-X XXX"
               />

               <label for="date">Deadline</label>
               <input type="date" id="deadline" name="deadline" />

               <label for="fee">Fee</label>
               <input
                  id="number"
                  id="fee"
                  name="fee"
                  placeholder="Enter 0 if free"
               />

               <label class="eventType">Event Type</label>
               <select name="eventType" id="eventType" class="form-select">
                  <option selected disabled>Choose an Event Type</option>
                  <% eventTypes.forEach((event) => { %>
                  <option value="<%= event.event_type_id %>">
                     <%= event.event_type_name %>
                  </option>
                  <% }); %>
               </select>

               <input type="submit" value="Create" class="btn btn-primary" />
            </form>
         </div>
      </main>

      <%- include("layout/footer")%>
   </body>
</html>
